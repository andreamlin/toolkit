#!/bin/bash

# The jar is generated by the command `./gradlew protocPluginJar`
java -Xms1024M -Xmx1024M -jar build/libs/protoc-plugin-gapic-generator-latest-fatjar.jar

# Sample protoc call, using the test Library API protos in this repo:
# ```
#   protoc --gapic-generator_out /tmp/target/generated-sources \
#     --gapic-generator_opt "language=java"
#     -I=src/test/java/com/google/api/codegen/testsrc/common \
#     -I=/usr/local/bin/protoc-3.6.0/include/ \
#     -I ~/api-common-protos/ \
#     library.proto
# ```